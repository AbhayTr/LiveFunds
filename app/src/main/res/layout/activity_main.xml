<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212529">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#9c8a7c"
                android:textColor="#ffffff"
                android:textSize="31sp"
                android:gravity="center"
                android:id="@+id/h1"
                android:includeFontPadding="false"
                android:paddingTop="10sp"
                android:textStyle="bold"
                android:text="Live Funds" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#9c8a7c"
                android:includeFontPadding="false"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:id="@+id/h2"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingBottom="5sp"
                android:text="by Abhay Tripathi" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#212529"
                android:includeFontPadding="false"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="6sp"
                android:id="@+id/time"
                android:text="Time will be shown here." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:context=".MainActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@mipmap/bgu"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        tools:context=".MainActivity">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_marginRight="10sp"
                            tools:context=".MainActivity">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bubble_income"
                                android:textColor="#ffffff"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:padding="10sp"
                                android:text="Income" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scrollHorizontally="true"
                                android:background="@drawable/bubble_data"
                                android:textColor="#90EE90"
                                android:textSize="41sp"
                                android:textStyle="bold"
                                android:padding="20sp"
                                android:id="@+id/income"
                                android:layout_marginTop="10sp"
                                android:text="₹0" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:context=".MainActivity">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bubble_expenses"
                                android:textColor="#ffffff"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:padding="10sp"
                                android:text="Expenses" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scrollHorizontally="true"
                                android:background="@drawable/bubble_data"
                                android:textColor="#ff7f7f"
                                android:textSize="41sp"
                                android:textStyle="bold"
                                android:id="@+id/expenses"
                                android:padding="20sp"
                                android:layout_marginTop="10sp"
                                android:text="₹0" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble_net"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:padding="10sp"
                        android:layout_marginTop="10sp"
                        android:text="Net Funds" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble_data"
                        android:textColor="#ffffff"
                        android:textSize="41sp"
                        android:textStyle="bold"
                        android:padding="20sp"
                        android:id="@+id/netFunds"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="18sp"
                        android:text="₹0 Cr" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="7sp"
                    android:id="@+id/h3"
                    android:background="#9c8a7c"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                    android:layout_marginTop="20sp"
                    android:minHeight="37sp"
                    android:padding="6sp"
                    android:maxLines="1"
                    android:id="@+id/amountInput"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#808080"
                    android:hint="Amount in Rupees..."
                    android:background="@drawable/bubble_input" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20sp"
                    android:orientation="horizontal"
                    tools:context=".MainActivity">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bubble_button_red"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:gravity="center"
                        android:focusable="true"
                        android:id="@+id/addExpenseButton"
                        android:layout_marginRight="35sp"
                        android:layout_marginLeft="35sp"
                        android:padding="10sp"
                        android:text="Add New Expense" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bubble_button_green"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:gravity="center"
                        android:focusable="true"
                        android:id="@+id/removeExpenseButton"
                        android:layout_marginRight="35sp"
                        android:layout_marginLeft="35sp"
                        android:padding="10sp"
                        android:text="Remove Expense" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15sp"
                    android:orientation="horizontal"
                    tools:context=".MainActivity">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bubble_button_green"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:gravity="center"
                        android:id="@+id/addIncomeButton"
                        android:focusable="true"
                        android:layout_marginRight="35sp"
                        android:layout_marginLeft="35sp"
                        android:padding="10sp"
                        android:text="Add New Income" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bubble_button_red"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:gravity="center"
                        android:id="@+id/removeIncomeButton"
                        android:focusable="true"
                        android:layout_marginRight="35sp"
                        android:layout_marginLeft="35sp"
                        android:padding="10sp"
                        android:text="Remove Income" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15sp"
                    android:orientation="horizontal"
                    tools:context=".MainActivity">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bubble_button_green"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:gravity="center"
                        android:focusable="true"
                        android:id="@+id/resetExpensesButton"
                        android:layout_marginRight="35sp"
                        android:layout_marginLeft="35sp"
                        android:padding="10sp"
                        android:text="Reset Expenses" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bubble_button_red"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:gravity="center"
                        android:id="@+id/resetIncomeButton"
                        android:focusable="true"
                        android:layout_marginRight="35sp"
                        android:layout_marginLeft="35sp"
                        android:padding="10sp"
                        android:text="Reset Income" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menuButton"
            android:src="@mipmap/baseline_more_vert_white_48"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="5sp"
            android:layout_marginTop="14sp" />

    </RelativeLayout>

</ScrollView>